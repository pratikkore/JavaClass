package Day19_4_23;

public class Initials {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String s="rahul kapil sharma";
		String[] s1=s.split(" ");
		String ini="";
		for (int i = 0; i < s1.length; i++) {
			if(i != s1.length-1){
			char temp =(char) (s1[i].charAt(0) -32);
			ini= ini + temp +".";
			}
		}
		System.out.println(ini);

	}

}
