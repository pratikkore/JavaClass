package Test3;

public class Problem6 {

	int x = 10;

	public void assign(int x) {
		x = x;
		System.out.println(x);
	}

	public static void main(String[] args) {

//		new Problem6().assign(100);

		for (int i = 1; i <= 7; i++) {
			if (i % 2 != 0) {
				for (int k = i; k >= 1; k--) {
					System.out.print(" ");
				}
				for (int j = 1; j <= i; j++) {
					System.out.print(j + " ");
				}
				System.out.println();
			}
		}

	}

}
