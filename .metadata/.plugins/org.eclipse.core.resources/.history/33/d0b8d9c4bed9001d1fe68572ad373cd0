package Day12ArrayObject;

import java.util.Arrays;
import java.util.Scanner;

class Student {
	int id;
	String name;
	String marks;

	public Student(int sId, String sName, String sMarks) {
		this.id = sId;
		this.name = sName;
		this.marks = sMarks;
	}

	@Override
	public String toString() {
		return id + " " + name + " " + marks;
	}
}

public class StudentMarksObj {

	public static void main(String[] args) {

		Student stud[] = new Student[2];
		for (int j = 0; j < stud.length; j++) {
			Scanner sc = new Scanner(System.in);
			System.out.println("Enter Student id ..");
			int sId = sc.nextInt();
			System.out.println("Enter Student Name..");
			String sName = sc.next();
			int sMarks[] = new int[2];
			for (int i = 0; i < sMarks.length; i++) {
				System.out.println("Enter Student marks..");
				sMarks[i] = sc.nextInt();
			}

			stud[j] = new Student(sId, sName,Arrays.toString(sMarks));
		}
		System.out.println(Arrays.toString(stud));

	}
}
