package Day11Array;

public class AverageRainFalls {

	public static void main(String[] args) {

		double arr[] = { 43.2, 54.21, 32.45, 43.5, 23.43, 28.32, 36.00 };
		double avg = 0;
		for (double i = 0; i < arr.length; i++) {
			double sum = 0;
			sum = sum + arr[(int) i];
			System.out.println(sum);

			avg = sum / arr.length;

		}
		System.out.println(avg);

	}

}
